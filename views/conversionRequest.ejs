        <label for="currency"><%= currencyTitle %></label>
        <select name="currency">
            <option value = "USD">US Dollars</option>
            <option value = "EUR">Euros</option>
        </select>
        <br>
        <button type="submit"><%= submitCaption %></button>
    </form> 
